<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- layout -->
    <RelativeLayout
        android:id="@+id/rl_item_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/rounded"
        android:elevation="4dp">

        <!-- layout icon -->
        <RelativeLayout
            android:id="@+id/rl_item_layout_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp">

            <!-- icon -->
            <ImageView
                android:id="@+id/iv_item_layout_image_recycler"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_pan_tool_black_24dp" />
        </RelativeLayout>

        <!-- layout content -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/rl_item_layout_icon">

            <RelativeLayout
                android:id="@+id/rl_item_layout_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp">


                <LinearLayout
                    android:id="@+id/ll_item_content_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="5dp"
                    android:orientation="horizontal"
                    android:layout_marginEnd="13dp">


                    <!--Right Side-->
                    <LinearLayout
                        android:id="@+id/rl_item_layout_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_item_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="hkajshfjkahfjhasjdkjakfjkasjfsaaskjfhaskjhfkjashfkjashfkjashfjahskfasjfh"
                            android:textColor="@color/colorPrimary"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                    <!--Right Side-->

                </LinearLayout>
                <!--Fourth Content-->

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>